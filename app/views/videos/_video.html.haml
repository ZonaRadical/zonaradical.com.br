%li
  %div{:style=>"text-align: center"}
    %p.name=link_to video.title, video_path(video)
    = thumbnail(video.source_link)
  -if can? :video, :update
    = link_to 'Edit', edit_video_path(video)
  -if can? :video, :delete
    = link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' }
  .clear