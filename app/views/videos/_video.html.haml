%li
  .details
    %p.name=link_to video.title, video_path(video)
    %iframe.youtube{:allowfullscreen => '', :frameborder => '0', :height => '200', :src => getEmbedLink(video.source_link), :width => '300'}
  -if can? :video, :update
    = link_to 'Edit', edit_video_path(video)
  -if can? :video, :delete
    = link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' }
  .clear