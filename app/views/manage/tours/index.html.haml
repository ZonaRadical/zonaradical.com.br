.main-content
  = form_tag manage_tours_path, id: 'show_passed_form', method: :get, enforce_utf8: false do
    Mostrar Trips passados
    = check_box_tag :show_passed, '1', params[:show_passed] == "1"

  .heading
    %h1 A lista dos seus Trips
  = render 'tours/list', tours: @tours_mine, tour_path_method: "manage_tour_path"
  .heading
    %h1 Trips que vocÃª participa
  = render 'tours/list', tours: @tours_participate, tour_path_method: "manage_tour_path"
  - unless @tours_others.empty?
    .heading
      %h1 Outros Trips
    = render 'tours/list', tours: @tours_others, tour_path_method: "manage_tour_path"

  = link_to t('newTour'), new_manage_tour_path, class: "button"

  .clear

  -content_for :aside do
    %aside
      =render 'shared/aside/aside_social_buttons'
      =render 'shared/aside/aside_advert'
      =render 'shared/aside/aside_fb_like_box'
      =render 'shared/aside/aside_resort_gallery'
    .clear