= form_for [:manage, @offer, @owner] do |f|
  - if @owner.errors.any?
    #error_explanation
      %h2= "#{pluralize(@owner.errors.count, "error")} prohibited this owner from being saved:"
      %ul
        - @owner.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :offer_id
  .field
    = f.label :user_id, t('user')
    = f.collection_select(:user_id, User.all, :id, :name, {:prompt => t('selectUser')})
  .actions
    = f.submit 'Save'
