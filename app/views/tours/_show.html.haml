%p= avatar_img(@tour.user_owners.first)
%p
  %b Tour style:
  = @tour.tour_style
%p
  %b Accommodation:
  = @tour.accommodation
%p
  %b Title:
  = @tour.title
%p
  %b Description:
  = @tour.description.html_safe
%p
  %b Duration:
  = @tour.duration
%p
  %b Check in:
  = check_in_formatted(@tour)
%p
  %b Price:
  = @tour.price
%p
  %b Published:
  = @tour.published

%p
  %b County(ies):
  = tour_countries(@tour)

%p
  %b Resort(s):
  = tour_resorts_names(@tour)
  - @tour.resorts.each do |resort|
    = resort_logo_img(resort)

-unless @tour.gallery_images.all.count.zero?
  = render 'shared/sliders/tip', images: @tour.gallery_images.all

= participation_status(@tour, participate_button: true)