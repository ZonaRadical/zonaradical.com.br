.profile-card
  .leftcol
    = link_to image_tag(profile.avatar_url, class: 'userpic', alt: profile.name ), user_url(profile)
  .rightcol
    .title
      %span.name
        =link_to profile.name.to_s + ' ' + profile.surname.to_s, user_url(profile)
      -if !profile.login.blank?
        =' aka ' + profile.login.to_s
      - if profile.online?
        %span.online online
      - else
        %span.offline offline
        %span.activity
          %b
            = t('lastSignInAt')
            \:
          = user_last_seen_at(profile)
    %ul.details-list
      -unless profile.birthday.nil?
        %li
          %b
            = t('age')
            \:
          = age profile.birthday
      -unless profile.city.blank?
        %li
          %b
            = t('city')
            \:
          =profile.city
      %li.contacts
        %b
          = t('contacts')
          \:
        .contacts-list
          - if profile.web
            %span.web=link_to profile.web, profile.web, :target => "_blank"
          - if profile.fb
            %span.fb=link_to profile.fb, profile.fb, :target => "_blank"
        .clear
      -unless profile.bio.blank?
        %p.bio
          %b Biografia:
          =truncate_html(profile.bio, length: 150, omission: '...')
  .galcol
    -unless profile.image_galleries.all.count.zero?
      Numero das galerias de foto:
      =profile.image_galleries.all.count
      =link_to image_tag(profile.image_galleries.sample.gallery_images.sample.image_url(:slider), class: 'galsample', :title=>"Foro de "+profile.name.to_s + " " + profile.surname.to_s), user_url(profile)
    -if 2<0
      .buttons
        %a.button{:href => "#"} Posts do FÃ³rum
        %a.button{:href => "#"} Posts do Vamo Junto
      .clear
  .clear
