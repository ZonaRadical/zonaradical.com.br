.main-content
  .heading
    %h2= t('userProfile')
  -if can? :update, @user
    =link_to t('edit'), edit_user_path(@user)
  .profile-card
    .leftcol
      = image_tag(@user.avatar_url, class: 'userpic', alt: @user.name )
      .reputation
        %a{:href => "#"} Reputação:
        %span Brother
      %ul.stars
        %li.full
        %li.full
        %li.full
        %li.full
        %li.full
        %li.full
        %li.full
        %li.empty
    .rightcol
      .title
        %span.name= @user.name + ' ' + @user.surname
        -if !@user.login.blank?
          =' aka ' + @user.login
        - if @user.online?
          %span.online online
        - else
          %span.offline offline
          %span.activity
            %b
              = t('lastSignInAt')
              \:
            = distance_of_time_in_words_to_now @user.last_seen_at
      %ul.details-list
        %li
          %b
            = t('age')
            \:
          %span= age @user.birthday
        %li
          %b
            = t('sex')
            \:
          %span=sex @user.sex
        %li
          %b
            = t('birthday')
            \:
          %span=@user.birthday.to_formatted_s(:long)
        %li
          %b
            = t('country')
            \:
          %span=Carmen::Country.coded(@user.country).name
        %li
          %b
            = t('city')
            \:
          %span=@user.city
        %li
          %b
            = t('interests')
            \:
          %span Snowboard, Wakeboard, Surfe
        %li.contacts
          %b
            = t('contacts')
            \:
          .contacts-list
            - if @user.email
              %span.email= @user.email
            - if @user.web
              %span.web= @user.web
            - if @user.fb
              %span.fb= @user.fb
          .clear
    .clear
    %p.bio
      %b Biografia:
      =@user.bio
    .buttons
      %a.button{:href => "#"} Posts do Fórum
      %a.button{:href => "#"} Posts do Vamo Junto
    .clear

