=render 'shared/sign_in'
%header
  .inner
    = link_to image_tag('logo.png'), main_app.root_path, class: :logo
    .enter-block
      - if user_signed_in?
        .registered
          %span
            = t('hello')
            , #{link_to current_user.name, main_app.profile_path} /
          = link_to t('signOut'), main_app.destroy_user_session_path, :class => 'exit-link', :method => :delete
      - else
        .non-registered
          - if controller_name != 'sessions'
            %span.signIn-dialog= t('signIn')
            = link_to omniauth_authorize_path(:user, 'facebook'), :class => 'login' do
              %span.fb
            = link_to omniauth_authorize_path(:user, 'twitter'), :class => 'login' do
              %span.tw
            %span /
            = link_to t('Sign up'), new_registration_path(:user)
            %br/
    %nav
      %ul.menu
        %li= link_to t('home'), main_app.root_path
        %li.submenu-item
          =link_to t('resorts'),main_app.resorts_url
          %ul.submenu
            =menu_resort_categories ResortCategory.all.arrange

        %li.submenu-item
          =link_to t('tips'),main_app.tips_url
          %ul.submenu
            =menu_tip_categories TipCategory.all.arrange

        %li
          %a{:href => "http://zonaradical.com.br/vamo-junto.html"} Vamo junto
        %li= link_to t('forum'), main_app.forem_path
        %li
          %a{:href => "http://zonaradical.com.br/galera.html"}
            Galera
            %span ZR
      .search-field
        %input{:placeholder => "Pesquisa", :type => "text"}/
        %a{:href => "#"}
    - if can? :manage, :all
      =render 'shared/admin_menu'
    - flash.each do |key, value|
      %div{:class => "flash flash-#{key}"}= value

