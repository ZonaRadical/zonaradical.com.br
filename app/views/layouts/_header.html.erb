<header>
  <div class="inner">
    <a href="#" class="logo"><%= t('logoWinter') %></a>
    <div class="enter-block">
      <%- if user_signed_in? %>
      <div class="registered">
        <span><%= t('hello')%>, <%= link_to current_user.name, main_app.edit_user_registration_path %> / </span>
        <%= link_to t('signOut'), main_app.destroy_user_session_path, :class => 'exit-link', :method => :delete %>
      </div>
      <%- else %>
      <div class="non-registered">
        <%- if controller_name != 'sessions' %>
            <%= link_to t('signIn'), new_session_path(:user), :class => 'login' %>
            <%= link_to omniauth_authorize_path(:user, 'facebook'), :class => 'login' do %>
                <span class="fb"></span>
            <% end %>
            <%= link_to omniauth_authorize_path(:user, 'twitter'), :class => 'login' do %>
                <span class="tw"></span>
            <% end %>
        <span> / </span>
            <%= link_to t('Sign up'), new_registration_path(:user) %><br />
        <% end -%>
      </div>
      <% end %>
    </div>
    <nav>
      <ul class="menu">
        <li><%= link_to t('Home'), root_path %></li>
        <li class="submenu-item">
          <a href="#">Estações</a>
          <ul class="submenu">
            <li><a href="#">texto português-1</a></li>
            <li class="subsubmenu-item">
              <a href="#">texto português-2</a>
              <ul class="subsubmenu">
                <li><a href="#">texto -1</a></li>
                <li><a href="#">texto -2</a></li>
              </ul>
            </li>
            <li><a href="#">texto português-3</a></li>
            <li><a href="#">texto português-4</a></li>
          </ul>
        </li>
        <li><a href="#">Dicas</a></li>
        <li><a href="#">Trips</a></li>
        <li><a href="#">Vamo junto</a></li>
        <li><%= link_to t('forum'), 'forums' %></li>
        <li><a href="#">Galera <span>ZR</span></a></li>
      </ul>
      <div class="search-field"><input type="text" placeholder="Pesquisa" /><a href="#"></a></div>
    </nav>
  </div><!-- end inner -->
</header>