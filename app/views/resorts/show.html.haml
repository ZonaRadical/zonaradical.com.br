.main-content
  .heading
    %h2
      = t('resorts')
      \: #{@resort.resort_category.name}:
  .resort-card
    .leftcol
      = image_tag @resort.image_url(:thumb).to_s, :class => :resortlogo
      %ul.details-list
        %li.contacts
          .contacts-list
            %span.web= link_to @resort.web, @resort.web, :target => '_blank'
            %span.fb= link_to @resort.fb, @resort.fb, :target => '_blank'
          .clear
    .rightcol
      .title
        %span.name= @resort.name
      %ul.details-list
        %li
          %img{:alt => 'Closest Airport', :src => '/images/web-icon.png'}/
          = t('airport')
        %li
          = t('airport')
          \:
          %b
            =@resort.airport
          %span
        %li
          = t('altitude')
          \:
          %b
            =@resort.altitude_top
            \-
            =@resort.altitude_bottom
        %li
          = t('drop')
          \:
          %b
            =@resort.drop
        %li
          = t('terrain')
          \:
          %b
            =@resort.terrain
          %span
        %li
          = t('lifts')
          \:
          %b
            =@resort.lifts
          %span.lifts
        %li
          = t('slopes')
          \:
          %b
            =@resort.slopes
          %span
    .clear
    %p.descr
      %b
        = t('ourtake')
        \:
      = @resort.level1_description.html_safe unless @resort.level1_description.nil?
    .buttons
      = link_to t('linkToResortWeb'), @resort.web, :class => :button, :target => '_blank'
      = link_to t('linkToResortMap'), @resort.map_url, :class => :button, :target => '_blank'
      .clear
    - if current_user && current_user.forem_admin?
      = link_to 'Edit', edit_resort_path(@resort)
      |
      \#{link_to 'Back', resorts_path}

-content_for :aside do
  %aside
    =render 'shared/aside_social_buttons'
    .heading
      %h2
      =t('resorts')
    %ul.categories
      %li
        =link_to resorts_path  do
          All
          %span='(' + Resort.all.size.to_s + ')'
      %li
        =aside_resort_categories @resort.resort_category
    =render 'shared/aside_fb_like_box'
    =render 'shared/aside_resort_gallery'
    =render 'shared/aside_advert'
  .clear