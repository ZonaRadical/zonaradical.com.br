= form_for(@resort, :html => {:multipart => true}) do |f|
  - if @resort.errors.any?
    #error_explanation
      %h2
        = pluralize(@resort.errors.count, "error")
        prohibited this resort from being saved:
      %ul
        - @resort.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = image_tag @resort.image_url(:thumb).to_s
    %p
    = f.file_field :image
    %br/
  .field
    = f.label :web
    = f.text_field :web
  .field
    = f.label :fb
    %br/
    = f.text_field :fb
    %p
  .field
    = f.label :level1_description
    %br/
    = f.text_area :level1_description
  .actions
    = f.submit