%p#notice= notice
.main-content
  .heading
    %h2= t('resort') + ': ' + @resort_category.name
  .introtext= @resort_category.description.html_safe unless @resort_category.description.nil?
  -if can? :update, @resort_category
    = link_to 'Edit', edit_resort_category_path(@resort_category)
  .clear
  %ul.stations-list
    =render @resorts
  -if @resort_category.children?
    -@resort_category.children.each do |resort_category|
      -unless resort_category.resorts.empty?
        .heading
          %h2= t('resort') + ': ' + resort_category.name + ' (' + resort_category.resorts.size.to_s + ')'
        .introtext= resort_category.description.html_safe unless resort_category.description.nil?
        -if can? :update, resort_category
          = link_to 'Edit', edit_resort_category_path(resort_category)
        .clear
        %ul.stations-list
          =render resort_category.resorts.limit(3)
        -if resort_category.resorts.size > 3
          %div=link_to t('otherResorts'), resort_category_path(resort_category)
-content_for :aside do
  %aside
    =render 'shared/aside_social_buttons'
    .heading
      %h2 Estações
    %ul.categories
      %li
        =link_to resorts_path  do
          All
          %span='(' + Resort.all.size.to_s + ')'
      %li
        =aside_resort_categories @resort_category
      -ResortCategory.roots.each do |root_category|
        -if @resort_category.root != root_category
          %li
            =link_to root_category.name, resort_category_path(root_category)
    =render 'shared/aside_fb_like_box'
    =render 'shared/aside_resort_gallery'
    =render 'shared/aside_advert'
  .clear