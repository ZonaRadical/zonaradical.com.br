= form_for @accommodation do |f|
  - if @accommodation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@accommodation.errors.count, "error")} prohibited this accommodation from being saved:"
      %ul
        - @accommodation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, :rows => 20, :cols => 120
  .actions
    = f.submit 'Save'
