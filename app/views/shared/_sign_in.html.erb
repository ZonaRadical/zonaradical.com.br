<div class="modal fade" id="signIn" tabindex="-1" role="dialog" aria-labelledby="signInlLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign in</h4>
      </div>

      <div class="modal-body">
        <%= form_for(User.new, url: session_path(:user),
                     html:{id: 'sign_in_user', :'data-type' => 'json'},
                     remote: true) do |f| %>
            <%= f.email_field :email, :autofocus => true %>
            <%= f.password_field :password %>
            <% if Devise.mappings[:user].rememberable? -%>
                <label class="checkbox"> <%= f.label :remember_me %> Rembmer me </label>
            <% end -%>


        <%= render "shared/links" %>
        <%= f.submit "Sign in", :class => "btn btn-success" %>
      </div>
      <div class="modal-footer"></div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
