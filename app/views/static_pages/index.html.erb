<div class="jumbotron">
  <% if user_signed_in? %>
      <h1><%= t('greetings') %></h1>
      <p class="lead">
        <%= t('homePageText') %>
      </p>
      <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => 'btn btn-large btn-danger' %>
  <% else %>
      <h1>Welcome, new user!</h1>
      <p class="lead">
        You must sign in or sign up before you can access our super sweet,
        top secret content.
      </p>
      <div class="row-fluid">
        <div class="col-lg-3">
          <%= link_to t('signIn'), new_user_session_path, :class => "btn btn-success" %>
        </div>
        <div class="col-lg-3">
          <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-info" %>
        </div>
      </div>
  <% end %>
</div>