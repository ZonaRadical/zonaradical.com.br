= form_for @tour_style do |f|
  - if @tour_style.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tour_style.errors.count, "error")} prohibited this tour_style from being saved:"
      %ul
        - @tour_style.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, :rows => 20, :cols => 120
  .actions
    = f.submit 'Save'
